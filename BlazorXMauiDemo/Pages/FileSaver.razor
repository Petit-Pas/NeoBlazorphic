@using BlazorXMauiDemo.Service
@inject IFileManager fileManager

@page "/fileManager"

<input type="text" @bind="Text"/>

<button @onclick="() => SaveFile()"> click me </button>




@code {
    public string Text { get; set; } = "Hello World";

    public void SaveFile()
    {
        fileManager.SaveAs(Text, "file");
    }
}
