
<div style="position: relative">
    @if (_isVisible)
    {
        <div class="" style="position: absolute; bottom: -10px; z-index: 1; transform: translateY(100%)">
            @if (ToolTipContent != null)
            {
                @ToolTipContent
            }
            else if (string.IsNullOrWhiteSpace(Text))
            {
                <div>
                    @Text
                </div>
            }
            else
            {
                <div>
                    Je suis le default oui
                </div>
            }
        </div>
    }
    <div>
        @ChildContent
    </div>
</div>
