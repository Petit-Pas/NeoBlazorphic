@page "/checksdemo"
@using NeoBlazorphic.Components.Inputs.Checks.CheckBoxes
@using NeoBlazorphic.StyleParameters

<h1>ChecksDemo</h1>

<br />

<div class="col">
    <div class="row">
        <div class="col-1">
            <br/>
            <CheckBox @bind-IsChecked=_Test.Checked IsEnabled="true"></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked2 IsEnabled="true" BoxShape="CheckBoxShape.Normal" AccentClass="neo-danger"></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked IsEnabled="true" BoxShape="CheckBoxShape.Normal" AccentClass="neo-gray"></CheckBox>
        </div>
        <div class="col-1">
            <br/>
            <CheckBox @bind-IsChecked=_Test.Checked IsEnabled="false"></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked2 IsEnabled="false" BoxShape="CheckBoxShape.Normal" AccentClass="neo-danger"></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked IsEnabled="false" BoxShape="CheckBoxShape.Normal" AccentClass="neo-gray"></CheckBox>
        </div>
        
        <div class="col-1">
            <br />
            <NewCheckBox @bind-IsChecked=_Test.Checked IsEnabled="true" ColorTheme="ColorTheme.Primary"></NewCheckBox>
            <br />
            <NewCheckBox @bind-IsChecked=IsChecked2 IsEnabled="true" BoxShape="CheckBoxShape.Normal" ColorTheme="ColorTheme.Danger"></NewCheckBox>
            <br />
            <NewCheckBox @bind-IsChecked=IsChecked IsEnabled="true" BoxShape="CheckBoxShape.Normal" ColorTheme="ColorTheme.Base"></NewCheckBox>
        </div>
        <div class="col-1">
            <br />
            <NewCheckBox @bind-IsChecked=_Test.Checked IsEnabled="false" ColorTheme="ColorTheme.Primary"></NewCheckBox>
            <br />
            <NewCheckBox @bind-IsChecked=IsChecked2 IsEnabled="false" BoxShape="CheckBoxShape.Normal" ColorTheme="ColorTheme.Danger"></NewCheckBox>
            <br />
            <NewCheckBox @bind-IsChecked=IsChecked IsEnabled="false" BoxShape="CheckBoxShape.Normal" ColorTheme="ColorTheme.Base"></NewCheckBox>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <br/>
            <CheckBox @bind-IsChecked=_Test.Checked IsEnabled="true" BoxShape="CheckBoxShape.Round" ></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked2 IsEnabled="true" BoxShape="CheckBoxShape.Round" AccentClass="neo-danger"></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked IsEnabled="true" BoxShape="CheckBoxShape.Round" AccentClass="neo-gray"></CheckBox>
        </div>
        <div class="col-1">
            <br/>
            <CheckBox @bind-IsChecked=_Test.Checked IsEnabled="false" BoxShape="CheckBoxShape.Round" ></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked2 IsEnabled="false" BoxShape="CheckBoxShape.Round" AccentClass="neo-danger"></CheckBox>
            <br/>
            <CheckBox @bind-IsChecked=IsChecked IsEnabled="false" BoxShape="CheckBoxShape.Round" AccentClass="neo-gray"></CheckBox>
        </div>

        <div class="col-1">
            <br/>
            <NewCheckBox @bind-IsChecked=_Test.Checked IsEnabled="true" BoxShape="CheckBoxShape.Round" ColorTheme="ColorTheme.Primary"></NewCheckBox>
            <br/>
            <NewCheckBox @bind-IsChecked=IsChecked2 IsEnabled="true" BoxShape="CheckBoxShape.Round" ColorTheme="ColorTheme.Danger"></NewCheckBox>
            <br/>
            <NewCheckBox @bind-IsChecked=IsChecked IsEnabled="true" BoxShape="CheckBoxShape.Round" ColorTheme="ColorTheme.Base"></NewCheckBox>
        </div>
        <div class="col-1">
            <br/>
            <NewCheckBox @bind-IsChecked=_Test.Checked IsEnabled="false" BoxShape="CheckBoxShape.Round" ColorTheme="ColorTheme.Primary"></NewCheckBox>
            <br/>
            <NewCheckBox @bind-IsChecked=IsChecked2 IsEnabled="false" BoxShape="CheckBoxShape.Round" ColorTheme="ColorTheme.Danger"></NewCheckBox>
            <br/>
            <NewCheckBox @bind-IsChecked=IsChecked IsEnabled="false" BoxShape="CheckBoxShape.Round" ColorTheme="ColorTheme.Base"></NewCheckBox>
        </div>

    </div>

</div>

@code {

    public class Test
    {
        public bool Checked { get; set; } = false;
    }

    public bool IsChecked { get; set; } = false;
    public bool IsChecked2 { get; set; } = false;

    public Test _Test { get; set; } = new Test();
}
