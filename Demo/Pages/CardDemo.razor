@page "/CardDemo"
@using NeoBlazorphic.Components.Base.Cards
@using NeoBlazorphic.StyleParameters

<h2>Card</h2>

<div>
    The Card control is used as a container for other controls.
    It can be either digged out or digged in, and it can have a flat, concave or convex shape
</div>

<div class="row">
    <div class="col-3">
        <div class="m-3">
            <Card ShadowPosition="ShadowPosition.Out" ColorTheme="ColorTheme.Danger" BackgroundShape="BackgroundShape.Convex">
                <p>
                    Hello World
                </p>
            </Card>
        </div>
    </div>
    <div class="col-3">
        <div class="m-3 neo-danger">
            <Card ShadowPosition="ShadowPosition.In" ColorTheme="ColorTheme.Danger" BackgroundShape="BackgroundShape.Convex">
                <p>
                    Hello World
                </p>
            </Card>
        </div>
    </div>
</div>
