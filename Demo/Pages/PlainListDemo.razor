@using NeoBlazorphic.Components.Lists.PlainLists
@using NeoBlazorphic.Models.SelectableItems
@using NeoBlazorphic.StyleParameters
@using NeoBlazorphic.Components.Lists.PlainLists

@page "/plainListDemo"

<div style="height: 15em">
    <PlainList ShadowPosition="ShadowPosition.Out" T="string" Items="Strings">
        <ItemRenderFragment Context="str">
            <div class="p-2">
                @str
            </div>
        </ItemRenderFragment>
    </PlainList>
</div>

<br/>

<div style="height: 15em">
    <PlainList ShadowPosition="ShadowPosition.In" T="SelectableItem<int>" Items="Integers">
        <ItemRenderFragment Context="item">
            <div class="py-1 px-3">
                @item.Item
            </div>
        </ItemRenderFragment>
    </PlainList>
</div>


